source 'https://rubygems.org'

# The Man Himself
gem "middleman", "~> 3.1.4"

# Official Middleman blog extension
gem "middleman-blog", "~> 3.2.0"

# Required for blog post summaries
gem "nokogiri"

# http://youtu.be/NbJ0kbTfQq4
gem "redcarpet", "~> 3.0.0"

# Official syntax highlighting extension; uses Rouge
gem "middleman-syntax"

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# Deploy a Middleman-built site over rsync, ftp, or git
gem "middleman-deploy", "~> 0.1.0"

# Minify HTML
gem "middleman-minify-html"

# For feed.xml.builder
gem "builder", "~> 3.0.0"

# Bourbon & Neat
gem "bourbon"
gem "neat"
